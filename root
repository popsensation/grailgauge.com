  <script>
    function analyze() {
      const url = document.getElementById('url').value;
      if (!url) return alert("Paste a URL first!");

      // Simulate AI analysis (replace later with real scraper)
      setTimeout(() => {
        document.getElementById('title').innerText = "Daft Punk - Discovery (2LP, 2001 AU Pressing)";
        document.getElementById('avg').innerText = "68.50";
        document.getElementById('range').innerText = "Buy under $40";
        document.getElementById('range').className = "buy";
        document.getElementById('chance').innerText = "82";
        document.getElementById('profit').innerText = "28.50";
        document.getElementById('result').style.display = "block";
      }, 1500);
    }
